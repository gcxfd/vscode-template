{
    "editor.formatOnSave": true,
    "emeraldwalk.runonsave": {
        "autoClearConsole": true,
        "shell": "bash",
        "commands": [
            {
                "match": ".*",
                "cmd": "echo -e `date +\"%Y-%m-%d %H:%M:%S\"`'\n'&&cd ${workspaceRoot} && bat ${file} && echo -e '\n'"
            }
        ]
    }
}